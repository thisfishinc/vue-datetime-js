{
  "name": "vue3-datetime-js",
  "description": "A Vue3 datepicker component for ThisFish Tally",
  "version": "3.1.1",
  "author": "rax",
  "license": "MIT",
  "main": "dist/vue-datetime-js.js",
  "keywords": [
    "vuejs",
    "persian",
    "jalali",
    "hijri",
    "islamic",
    "gregory",
    "gregory",
    "christian",
    "datepicker",
    "timepicker",
    "datetime picker",
    "vue datepicker",
    "persian datepicker",
    "jalali datepicker",
    "hijri datepicker",
    "Umm al-Qura datepicker",
    "islamic calendar",
    "christian datepicker",
    "gregory datepicker"
  ],
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack-dev-server --open --hot --port 8000",
    "build": "cross-env NODE_ENV=production webpack --progress",
    "export": "cross-env NODE_ENV=export webpack --progress",
    "browser": "cross-env NODE_ENV=browser webpack --progress",
    "buildAll": "npm run build && npm run export && npm run browser",
    "buildNotBrowser": "npm run build && npm run export",
    "lint": "eslint --fix --ext .js,.vue src"
  },
  "dependencies": {
    "moment-hijri": "^2.1.2",
    "moment-jalaali": "^0.10.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DigitalCloud/vue3-datetime-js.git"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/plugin-transform-runtime": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "@babel/runtime": "^7.22.0",
    "@vue/babel-plugin-jsx": "^1.4.0",
    "@vue/babel-preset-app": "^5.0.8",
    "@vue/compiler-sfc": "^3.3.4",
    "autoprefixer": "^10.4.17",
    "babel-loader": "^9.1.3",
    "cross-env": "^7.0.3",
    "css-loader": "^6.10.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-vue": "^9.21.1",
    "file-loader": "^6.2.0",
    "highlight.js": "^11.9.0",
    "html-webpack-plugin": "^5.6.3",
    "postcss": "^8.4.35",
    "postcss-loader": "^8.1.0",
    "sass": "^1.89.0",
    "sass-loader": "^16.0.5",
    "vue": "^3.4.15",
    "vue-loader": "^17.2.2",
    "vue-router": "^4.2.5",
    "vue-style-loader": "^4.1.3",
    "webpack": "^5.90.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended",
      "plugin:vue/recommended",
      "prettier",
      "prettier/vue"
    ],
    "rules": {
      "vue/max-attributes-per-line": [
        "error",
        {
          "singleline": 5,
          "multiline": {
            "max": 1,
            "allowFirstLine": false
          }
        }
      ],
      "vue/html-self-closing": [
        "error",
        {
          "html": {
            "void": "always",
            "normal": "always",
            "component": "always"
          },
          "svg": "always",
          "math": "always"
        }
      ]
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  }
}
